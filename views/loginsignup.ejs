				<input type="text" id="index-signup-firstname" placeholder="First Name" />
				<input type="text" id="index-signup-lastname" placeholder="Last Name" />
				<input type="email" id="index-signup-email" placeholder="Email" />
				<input type="password" id="index-signup-password" placeholder="Password" />
				<button id="index-signup-button">Sign Up</button>
			</form>
		</div>
		<div class="form-container sign-in-container">
			<form action="/homepage" method="post">
				<h1>Sign in</h1>
				<!-- <div class="social-container">
					<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
